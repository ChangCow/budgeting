<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <nav class="main-nav">
            <a href="/">Home</a>
            <a href="/expenses">Expenses</a>
            <a href="/income">Income</a>
            <a href="/graph">Graph</a>
        </nav>
        <aside class="sidebar">
            <h1>Add Expense üí∏</h1>
            <form action="/add" method="POST" class="expense-form">
                <input type="text" name="description" placeholder="What's the expense?" required>
                <input type="number" name="amount" placeholder="How much?" step="0.01" required>
                <input type="date" name="startDate" required>
                <select name="frequency" required>
                    <option value="" disabled selected>How often?</option>
                    <option value="weekly">Weekly</option>
                    <option value="monthly">Monthly</option>
                    <option value="yearly">Yearly</option>
                </select>
                <button type="submit">Add It</button>
            </form>

            <h2 class="sidebar-title">Your Recurring Bills</h2>
            <div class="expense-list">
                <% allExpenses.sort((a, b) => a.description.localeCompare(b.description) || new Date(a.startDate) - new Date(b.startDate)).forEach(expense => { %>
                    <div class="list-item">
                        <span>
                            <strong><%= expense.description %></strong> - $<%= expense.amount.toFixed(2) %> (<%= expense.frequency %>)
                            <small style="display: block; opacity: 0.7;">
                                From: <%= format(new Date(expense.startDate), 'MMM dd, yyyy') %>
                                <% if (expense.endDate) { %>
                                    To: <%= format(new Date(expense.endDate), 'MMM dd, yyyy') %>
                                <% } %>
                            </small>
                        </span>
                        <form action="/delete/<%= expense.id %>" method="POST">
                            <button type="submit" class="delete-btn">üóëÔ∏è</button>
                        </form>
                    </div>
                <% }) %>
            </div>
        </aside>

        <main class="main-content">
            <h1>Recent Bills üóìÔ∏è</h1>
            <div class="upcoming-list">
                <% recentBills.forEach((item, index) => { %>
                    <div class="upcoming-item" id="recent-expense-<%= index %>">
                        <div class="item-content">
                            <div class="date-tag"><%= format(item.displayDate, 'MMM dd') %></div>
                            <div class="details">
                                <span class="description"><%= item.description %></span>
                                <span class="amount">-$<%= item.amount.toFixed(2) %></span>
                            </div>
                            <button class="edit-btn" onclick="document.getElementById('edit-form-recent-<%= index %>').style.display='flex'">Edit</button>
                        </div>
                        
                        <form action="/update" method="POST" class="edit-form" id="edit-form-recent-<%= index %>">
                            <input type="hidden" name="baseId" value="<%= item.id %>">
                            <input type="hidden" name="originalDateStr" value="<%= item.originalDate.toISOString() %>">
                            
                            <input type="date" name="newDateStr" value="<%= formatForInput(item.displayDate) %>">
                            
                            <label class="propagate-label">
                                <input type="checkbox" name="propagate"> Propagate?
                            </label>
                            
                            <div class="form-actions">
                                <button type="submit">Save</button>
                                <button type="button" class="cancel-btn" onclick="document.getElementById('edit-form-recent-<%= index %>').style.display='none'">Cancel</button>
                            </div>
                        </form>
                    </div>
                <% }) %>
            </div>

            <h1 id="total-weekly-expenses">Total Weekly Expenses: $<%= totalWeeklyExpense %> üí∞</h1>

            <h1>Today's/Upcoming Bills üî•</h1>
            <div class="upcoming-list">
                <% todaysBills.forEach((item, index) => { %>
                    <div class="upcoming-item" id="today-expense-<%= index %>">
                        <div class="item-content">
                            <div class="date-tag">Today</div>
                            <div class="details">
                                <span class="description"><%= item.description %></span>
                                <span class="amount">-$<%= item.amount.toFixed(2) %></span>
                            </div>
                            <button class="edit-btn" onclick="document.getElementById('edit-form-today-<%= index %>').style.display='flex'">Edit</button>
                        </div>
                        
                        <form action="/update" method="POST" class="edit-form" id="edit-form-today-<%= index %>">
                            <input type="hidden" name="baseId" value="<%= item.id %>">
                            <input type="hidden" name="originalDateStr" value="<%= item.originalDate.toISOString() %>">
                            
                            <input type="date" name="newDateStr" value="<%= formatForInput(item.displayDate) %>">
                            
                            <label class="propagate-label">
                                <input type="checkbox" name="propagate"> Propagate?
                            </label>
                            
                            <div class="form-actions">
                                <button type="submit">Save</button>
                                <button type="button" class="cancel-btn" onclick="document.getElementById('edit-form-today-<%= index %>').style.display='none'">Cancel</button>
                            </div>
                        </form>
                    </div>
                <% }) %>

                <% upcomingBills.forEach((item, index) => { %>
                    <div class="upcoming-item" id="upcoming-expense-<%= index %>">
                        <div class="item-content">
                            <div class="date-tag"><%= format(item.displayDate, 'MMM dd') %></div>
                            <div class="details">
                                <span class="description"><%= item.description %></span>
                                <span class="amount">-$<%= item.amount.toFixed(2) %></span>
                            </div>
                            <button class="edit-btn" onclick="document.getElementById('edit-form-upcoming-<%= index %>').style.display='flex'">Edit</button>
                        </div>
                        
                        <form action="/update" method="POST" class="edit-form" id="edit-form-upcoming-<%= index %>">
                            <input type="hidden" name="baseId" value="<%= item.id %>">
                            <input type="hidden" name="originalDateStr" value="<%= item.originalDate.toISOString() %>">
                            
                            <input type="date" name="newDateStr" value="<%= formatForInput(item.displayDate) %>">
                            
                            <label class="propagate-label">
                                <input type="checkbox" name="propagate"> Propagate?
                            </label>
                            
                            <div class="form-actions">
                                <button type="submit">Save</button>
                                <button type="button" class="cancel-btn" onclick="document.getElementById('edit-form-upcoming-<%= index %>').style.display='none'">Cancel</button>
                            </div>
                        </form>
                    </div>
                <% }) %>
            </div>
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const element = document.getElementById('total-weekly-expenses');
            if (element) {
                element.scrollIntoView({ block: 'center', behavior: 'auto' });
            }
        });
    </script>
</body>
</html>